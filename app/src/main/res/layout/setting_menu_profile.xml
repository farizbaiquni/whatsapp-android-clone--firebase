<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/profile_setting_menu_layout">


    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_profile_setting_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/linier_layout_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/image_profile_setting_menu"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/whatsapp_icon"
                app:civ_border_width="0dp"
                app:civ_border_color="#FF000000"
                android:layout_margin="30dp"/>

            <LinearLayout
                android:id="@+id/content_profile_setting_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical">

                <TextView
                    android:id="@+id/username_profile_setting_menu"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="UsernameUsernameUsernameUsernameUsernameUsername"
                    android:textSize="21sp"
                    android:maxLength="150"
                    android:maxLines="2"/>

                <TextView
                    android:id="@+id/description_profile_setting_menu"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="DescriptionDescriptionDescriptionDescription"
                    android:textSize="14sp"
                    android:maxLines="2"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/scan_profile_setting_menu"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:alpha="0.5"
                android:src="@drawable/barcode"
                android:layout_marginStart="20dp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <View
        android:layout_below="@+id/card_view_profile_setting_menu"
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="#C8C8C8" />

</RelativeLayout>