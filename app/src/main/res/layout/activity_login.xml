<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">


    <ScrollView
        android:layout_width="409dp"
        android:layout_height="729dp"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="20dp"
                android:src="@drawable/whatsapp_icon"
                android:layout_gravity="center_horizontal"
                android:scaleType="fitCenter"/>

            <EditText
                android:id="@+id/edit_text_email_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:inputType="textEmailAddress"
                android:hint="Email"
                android:layout_marginHorizontal="20dp"
                android:padding="10dp"/>

            <EditText
                android:id="@+id/edit_text_password_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:inputType="textPassword"
                android:hint="Password"
                android:layout_marginHorizontal="20dp"
                android:padding="10dp"/>

            <TextView
                android:id="@+id/text_view_forget_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:text="Forget Password"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="@color/colorToolBar"
                android:textAlignment="textEnd"
                android:pointerIcon="hand"/>

            <Button
                android:id="@+id/button_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="20dp"
                android:layout_gravity="center_horizontal"
                android:text="Login"
                android:textSize="20dp"
                android:textColor="@color/colorWhite"
                android:background="@color/colorWhatsAppDarkGreen"/>

            <TextView
                android:id="@+id/text_view_signup_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:text="Need new account ?"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="@color/colorToolBar"
                android:textAlignment="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:text="Or login using your"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textAlignment="center"/>

            <Button
                android:id="@+id/button_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="20dp"
                android:layout_gravity="center_horizontal"
                android:text="Phone"
                android:textSize="20dp"
                android:textColor="@color/colorWhite"
                android:background="@color/colorWhatsAppDarkGreen"/>

        </LinearLayout>
    </ScrollView>

